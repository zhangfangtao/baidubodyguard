<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/load_background"
    tools:context="com.zzptc.LiuXiaolong.baidu.activity.Load_Version">

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="1px"
        android:layout_height="1px"
        android:src="@mipmap/load_one"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/iv_yellow"
        android:layout_width="1px"
        android:layout_height="1px"
        android:src="@mipmap/load_two"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_versionUpdate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
</RelativeLayout>
