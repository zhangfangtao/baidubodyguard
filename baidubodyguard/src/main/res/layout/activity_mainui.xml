<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainUI_Activity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#1445A4"
        >

        <com.zzptc.LiuXiaolong.baidu.view.RatingView
            android:id="@+id/rb_rate"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:text="88"
                android:textColor="@android:color/white"
                android:textSize="90dp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </com.zzptc.LiuXiaolong.baidu.view.RatingView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/functionitems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/mobile_speedup"
                style="@style/BtnFuncation"
                android:text="@string/mobile_speedup"
                android:drawableTop="@mipmap/mobile_speedup"
                />

            <Button
                android:id="@+id/garbage_clean"
                style="@style/BtnFuncation"
                android:drawableTop="@mipmap/garbage_clean"
                android:text="@string/clear_rubbish"/>

            <Button
                style="@style/BtnFuncation"
                android:drawableTop="@mipmap/security_guard"
                android:text="@string/security_guard"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/parent_protect"
                style="@style/BtnFuncation"
                android:drawableTop="@mipmap/parent_protect"
                android:text="@string/parent_protect"/>

            <Button
                android:id="@+id/treasure_box"
                style="@style/BtnFuncation"
                android:drawableTop="@mipmap/treasure_box_up"
                android:text="@string/treasure_box_up"
                />
            <Button
                style="@style/BtnFuncation"
                android:background="#00000000"
                android:enabled="false"
                android:focusable="false"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
