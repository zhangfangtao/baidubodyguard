<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.zzptc.LiuXiaolong.baidu.fragment.DialogFragment_speedup_appinfo">

    <TextView
        android:id="@+id/tv_appinfo_name"
        android:text="sohu tv"
        android:textSize="25dp"
        style="@style/MobileSpeedupDiaLogTextView"
        android:textColor="@android:color/black"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/Memory_Usage"
        style="@style/MobileSpeedupDiaLogTextView"
        android:textSize="15dp"
        android:text="内存占用："
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:id="@+id/Layout_appInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/appinfo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="应用详情"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                 />
        </LinearLayout>
       <LinearLayout

           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center">
           <ImageView
               android:id="@+id/img_add_whitelist"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/add_writelist"
               />

           <TextView
               android:id="@+id/tv_add_whitelist"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="加入白名单"
               android:textSize="15dp"
               android:textColor="?attr/colorPrimary"
               android:gravity="center"
               />

       </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <Button
            android:id="@+id/close_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/shape_speedup_dialog_button"/>
        <Button
            android:id="@+id/clear_thisapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清理"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_speedup_dialog_button2"

            />

    </LinearLayout>
</LinearLayout>
